{% extends 'AnimeDBCatalogBundle::layout.html.twig' %}

{% block title %}{% trans %}Autofill record{% endtrans %}{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('/bundles/animedbcatalog/js/jquery.form.min.js') }}"></script>
{% endblock %}

{% if form %}
	{% form_theme form 'AnimeDBCatalogBundle:Form:fields.html.twig' %}
{% endif %}

{% block content %}
<div class="b-addition-form">
	<h2>{% trans %}Autofill record{% endtrans %}</h2>
	<div>
		{% if error %}
			<strong>{{ error|trans }}</strong>
		{% else %}
			<form action="{{ path('item_add_manually') }}" method="post">
				{{ form_widget(form) }}
				<button type="submit">{% trans %}Add{% endtrans %}</button>
			</form>
		{% endif %}
	</div>
</div>
{% endblock %}